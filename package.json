{
    "name": "bowser",
    "version": "0.0.0",
    "description": "back-end",
    "main": "dist/index.js",
    "scripts": {
        "prettier": "prettier --write \"*.{js,jsx,ts,tsx,json}\"",
        "lint": "eslint ./src -c .eslint.js --fix --ext ts,tsx",
        "start": "cross-env PORT=3030 NODE_ENV=development nodemon ./src/app.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ave-mario/bowser.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/ave-mario/bowser/issues"
    },
    "homepage": "https://github.com/ave-mario/bowser#readme",
    "dependencies": {
        "express": "^4.17.0",
        "lint-staged": "^8.1.7"
    },
    "devDependencies": {
        "@types/express": "^4.16.1",
        "@types/node": "^12.0.2",
        "@typescript-eslint/eslint-plugin": "^1.9.0",
        "@typescript-eslint/parser": "^1.9.0",
        "cross-env": "^5.2.0",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^4.3.0",
        "eslint-plugin-prettier": "^3.1.0",
        "husky": "^2.3.0",
        "nodemon": "^1.19.0",
        "prettier": "^1.17.1",
        "ts-node": "^8.1.0",
        "typescript": "^3.4.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
      "src/**/*.{ts, tsx}": [
        "eslint --fix"
      ],
      "src/**/*.{ts,tsx,js, jsx,json}": [
        "prettier --write"
      ]
    }
}
