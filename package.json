{
  "name": "bowser",
  "version": "0.1.0",
  "description": "back-end",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint ./src -c .eslintrc.js --ext ts,tsx,json,js",
    "lint:fix": "eslint ./src -c .eslintrc.js --fix --ext ts,tsx,json,js",
    "prettier": "prettier --write \"*.{js,jsx,ts,tsx,json}\"",
    "start": "nodemon ./src/app.ts",
    "e2e": "cross-env NODE_ENV=test jest --forceExit --detectOpenHandles",
    "e2e:watch": "jest --watch",
    "e2e:coverage": "npm run lint && npm run test --coverage --no-cache"
  },
  "engines": {
    "node": "10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ave-mario/bowser.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ave-mario/bowser/issues"
  },
  "homepage": "https://github.com/ave-mario/bowser#readme",
  "dependencies": {
    "bcrypt": "^3.0.6",
    "dotenv": "^8.0.0",
    "express": "^4.17.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.5.10",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.13",
    "@types/joi": "^14.3.3",
    "@types/mongoose": "^5.5.1",
    "@types/morgan": "^1.7.35",
    "@types/node": "^12.0.2",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/supertest": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.0",
    "prettier": "^1.17.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run prettier",
      "npm run lint:fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
